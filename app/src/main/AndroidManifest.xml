<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.varunverma.androidtips">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<permission android:name="org.varunverma.androidtips.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="org.varunverma.androidtips.permission.C2D_MESSAGE" />
	<!-- App receives GCM messages. -->
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" /> 
	<!-- Keeps the processor from sleeping when a message is received. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <application
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:allowBackup="false"
        android:label="@string/app_name" >
        
        <provider android:name=".SearchSuggestionProvider"
            android:exported="true"
            android:permission="android.permission.INTERNET"
            android:authorities="org.varunverma.androidtips.SearchSuggestionProvider" />

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Main"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <!-- enable the search dialog to send searches to SearchableActivity -->
        	<meta-data android:name="android.app.default_searchable"
                   android:value=".Search" />
        </activity>
        
        <activity
            android:name=".DisplayFile"
            android:configChanges="orientation|keyboardHidden"
            android:exported="false"
            android:parentActivityName=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.INFO" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".PostDetailActivity"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.POST_DETAIL" />
            </intent-filter>
        </activity>
        
        <activity android:name=".PostRating"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.Dialog"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.RATE" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Search" 
            android:exported="true"
            android:parentActivityName=".Main"
            android:permission="android.permission.INTERNET"
            android:label="@string/search" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.ayansh.chalisasangrah" />
            </intent-filter>
        </receiver>

        <service
            android:name="org.varunverma.androidtips.AppGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <service
            android:name="org.varunverma.androidtips.AppInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>

        <service
            android:name="org.varunverma.androidtips.AppRegistrationService"
            android:exported="false">
        </service>

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>